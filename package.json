{
  "name": "energiamalgrat-web-next",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "dev:https": "next dev --experimental-https --hostname local.energiamalgrat.cat",
    "build": "next build",
    "start": "next start",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "codegen": "WORDPRESS_URL=$(grep WORDPRESS_URL .env | cut -d '\"' -f2) graphql-codegen --config codegen.config.ts",
    "lint": "biome check",
    "lint:fix": "biome lint --write",
    "format": "biome format --write",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.11.1",
    "@t3-oss/env-nextjs": "^0.13.10",
    "better-auth": "^1.4.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "graphql": "^16.12.0",
    "graphql-request": "^7.4.0",
    "html-react-parser": "^5.2.11",
    "lucide-react": "^0.562.0",
    "mysql2": "^3.16.0",
    "next": "16.1.1",
    "next-themes": "^0.4.6",
    "radix-ui": "latest",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@graphql-codegen/cli": "^6.1.1",
    "@graphql-codegen/typescript-graphql-request": "^6.4.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^22",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "drizzle-kit": "^0.31.8",
    "drizzle-seed": "^0.3.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  },
  "engines": {
    "node": "^22.18",
    "pnpm": ">=9.5"
  },
  "ct3aMetadata": {
    "initVersion": "7.40.0"
  },
  "packageManager": "pnpm@10.20.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ],
    "overrides": {
      "@types/react": "19.2.8",
      "@types/react-dom": "19.2.3"
    }
  }
